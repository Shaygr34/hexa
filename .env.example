# ═══════════════════════════════════════════════════════════════
# ZVI v1 — Configuration
# Copy to .env.local and fill in values
# ═══════════════════════════════════════════════════════════════

# ── Polymarket ──
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com
POLYMARKET_CLOB_URL=https://clob.polymarket.com
POLYMARKET_CHAIN_ID=137

# Execution mode only (leave blank for observation-only)
POLYMARKET_PRIVATE_KEY=
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# ── On-chain (Polygon RPC for feeRate fetcher) ──
POLYGON_RPC_URL=https://polygon-rpc.com
NEGRISK_ADAPTER_ADDRESS=0xC5d563A36AE78145C45a50134d48A1215220f80a
NEGRISK_EXCHANGE_ADDRESS=0x4bFb41d5B3570DeFd03C39a9A4D8dE6Bd8B8982E

# ── LLM Keys ──
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
XAI_API_KEY=

# ── Alerts ──
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

ENABLE_EMAIL_ALERTS=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=

WEBHOOK_URL=

# ── Risk Limits ──
MAX_EXPOSURE_PER_MARKET=500
DAILY_MAX_EXPOSURE=2000
MIN_EDGE_THRESHOLD=0.02
MIN_DEPTH_USDC=100

# ── Operation Mode ──
OBSERVATION_ONLY=true
MANUAL_APPROVAL_REQUIRED=true
AUTO_EXEC=false
KILL_SWITCH=false

# ── Database ──
DATABASE_PATH=./data/zvi.db
